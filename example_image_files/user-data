#cloud-config
hostname: <DEVICE_HOSTNAME>
manage_etc_hosts: true
packages:
- avahi-daemon
apt:
  conf: |
    Acquire {
      Check-Date "false";
    };

timezone: <CURRENT_TIMEZONE>
runcmd:
- sed -i 's/^s*REGDOMAIN=S*/REGDOMAIN=<CURRENT_COUNTRYCODE_2LETTER>/' /etc/default/crda || true
- rm -f /etc/xdg/autostart/piwiz.desktop
- localectl set-x11-keymap "<CURRENT_LOCALE>" pc105
- setupcon -k --force || true
